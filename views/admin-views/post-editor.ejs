    <title>Krisaridancer - Blog</title>
    <link rel="stylesheet" href="../../styles.css">
    <link rel="shortcut icon" href="../../wind-icon.png" type="image/png">
</head>
<body>
    <div id="outer-div">
        <div id="content-div">
            <h1>Blog Admin</h1>

            <nav id="navbar">&lt;&lt;&lt;
                <a href="http://localhost:11001/">Home</a>
                <a href="http://localhost:11001/ka">SCHub</a>
                <a href="http://localhost:11001/ka/blog">Blog</a>
                <a href="http://localhost:11001/ka/guestbook">Guestbook</a>
                <a href="http://localhost:11001/ka/vidya-clone">Vidya Clone</a>
            &gt;&gt;&gt;</nav>

            <form action="http://localhost:11001/ka/create-post" method="POST">
                <div>
                    <label>Title*</label>
                    <br>
                    <input type="text" name="title" class="entryField" required>
                </div>
                <div>
                    <label>Post Content*</label>
                    <br>
                    <textarea name="content" cols="30" rows="10" class="entryField" id="postContentBox" required></textarea>
                </div>
                <div>
                    <label>Password*</label>
                    <br>
                    <input type="password" name="password" class="entryField" required>
                </div>
                <div>
                    <label>Author*</label>
                    <br>
                    <input type="text" name="author" class="entryField" required>
                </div>
                <div>
                    <label id="dateLabel">Date*</label>
                    <br>
                    <input type="text" name="date" class="entryField" required>
                </div>
                <br>
                <button id="postButton">Post It!</button>
            </form>
            
        </div>
    </div>
</body>
