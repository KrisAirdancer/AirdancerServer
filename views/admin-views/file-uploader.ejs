<style>
    #fileUploadInput {
        cursor: pointer;
    }

    #fileUploadInput::file-selector-button {
        background-color: var(--blue);
        color: var(--orange);
        border: 1px solid var(--orange);
        border-radius: 5px;
        margin-bottom: 5px;
        cursor: pointer;
        width: 100px;
    }

    #fileUploadInput::file-selector-button:hover {
        color: #ffffff;
        border-color: white;
    }

    /***** Post Button *****/
    
    .btn {
        background-color: var(--blue);
        color: var(--orange);
        border: 1px solid var(--orange);
        border-radius: 5px;
        width: 100px;
    }
    
    .btn:active {
        color: #ffffff;
        border-color: white;
    }
    
    .btn:hover {
        cursor:pointer;
        color: #ffffff;
        border-color: white;
    }

    /***** FILES LIST *****/

    #filesList {
        margin-top: 20px;
        max-width: 700px;
    }

    .fileEntry {
        display: flex;
        align-items: center;
        margin-top: 5px;
        padding: 5px;
        border: 1px solid var(--orange);
        border-radius: 5px;
        overflow-x: scroll;
    }

    .fileEntry::-webkit-scrollbar {
        display: none;
    }
    
    .fileEntry img {
        margin-right: 5px;
        border: 1px solid var(--orange);
        border-radius: 5px;
        width: 75px;
    }
</style>
